@model IEnumerable<WebApplication8.Models.Coder>

@{
    ViewData["Title"] = "Index";
}

<h2>Coders List</h2>

<p>
    <a href="#" onclick="createCoder()">Create new</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoderInfo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CoderInfo)
                </td>
                <td>
                    <a href="#" onclick="editCoder(@item.CoderID)">Edit</a> |
                    <a href="#" onclick="showCoder(@item.CoderID)">Details</a> |
                    <a href="#" onclick="deleteCoder(@item.CoderID)">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">Proj</h3>
            </div>
            <div class="modal-body" id="myModalBodyDiv">


            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>

            </div>

        </div>

    </div>

</div>

<script>

    var showCoder = function (coderID) {
        var url = "/Coders/p_Details/" + coderID;
        $("#myModalBodyDiv").load(url, function () {
            $("#myModal").modal("show");

        });

    }

    var editCoder = function (coderID) {
        var url = "/Coders/p_Edit/" + coderID;
        $("#myModalBodyDiv").load(url, function () {
            $("#myModal").modal("show");

        });
    }

    var deleteCoder = function (coderID) {
        var url = "/Coders/p_Delete/" + coderID;
        $("#myModalBodyDiv").load(url, function () {
            $("#myModal").modal("show");

        });
    }

    var createCoder = function () {
        var url = "/Coders/p_Create";
        $("#myModalBodyDiv").load(url, function () {
            $("#myModal").modal("show");

        });
    }

</script>